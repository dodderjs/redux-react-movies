{
	"root": true,
	"extends": [
		"eslint:recommended",
		"airbnb"
	],
	"plugins": [
		"react"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread": true
		}
	},
	"rules": {
		"max-len": [1, 120, 2, {"ignoreComments": true}],
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"indent": ["error", "tab"],
		"require-jsdoc": "off",
		"react/jsx-indent": ["error", "tab"],
		"react/jsx-filename-extension": "off",
		"no-underscore-dangle": "off",
		"import/prefer-default-export": "off",
		"arrow-parens": "off"
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"jquery": true,
		"jest": true
	},
	"globals": {}
}
